<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BlindFindMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BlindFindMaui"
    Shell.FlyoutBehavior="Disabled"
    >
    <Shell.TitleView>
        <Label
            BackgroundColor="Black"
            Text="Blind Find"
            TextColor="White"
            FontSize="40"
            FontAttributes="Bold"
            FontFamily="OCRAEXT"
            
        />
    </Shell.TitleView>

    <ShellContent
        Title="Blind Find"
        ContentTemplate="{DataTemplate local:BlindFind}"
        Route="BlindFind" />

</Shell>
